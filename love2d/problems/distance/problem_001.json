    },
    {
      "en": "For this problem: d = √[(3-0)² + (4-0)²] = √[9 + 16] = √25",
      "es": "Para este problema: d = √[(3-0)² + (4-0)²] = √[9 + 16] = √25"
    }
  ],
  "validation": {
    "type": "numeric_answer",
    "expected": 5.0,
    "tolerance": 0.1
  },
  "success_message": {
